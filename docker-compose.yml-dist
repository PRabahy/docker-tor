version: "3.8"

services:
    tor:
        image: lncm/tor:0.4.7.7
        container_name: tor
        volumes:
            - ${PWD}/data:/etc/tor
            - ${PWD}/data:/var/lib/tor
            - ${PWD}/run:/var/run/tor
        restart: on-failure
        network_mode: host
        stop_grace_period: 10m30s
